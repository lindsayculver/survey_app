<%= @survey.name %>

<form action='/surveys/<%= @survey.id() %>/edit' method='post'>
  <input name="_method" type="hidden" value="patch">
  <label for="name">Rename this survey:</label>
  <input id="name" name="name" type="text">
  <button type="submit">Edit</button>
</form>

<% if @survey.questions.any?() %>

<% @questions.each do |question| %>
<ul>
  <a href="/questions/<%= question.id() %>/edit"> <li><%= question.content() %></li></a>
</ul>
<% end %>
<% else %>
<h3>Ask something below!</h3>
<% end %>

<h3>Create New Question:</h3>
<form action="/surveys/<%= @survey.id() %>/questions" method="post">
  <input id="content" name="content" type="text">

  <button type="submit">Add Question to Survey</button>
</form>


<h6>Don't admire your handy work?</h6>
<form action="/surveys/<%= @survey.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">
  <button type="submit">DELETE SURVEY</button>
</form>
